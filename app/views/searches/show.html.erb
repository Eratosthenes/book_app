<h1>Search Results</h1>
<%=link_to 'Back', new_search_path%>

<%if @books.empty?%>
  <p>No records found</p>
<%else%>
  <% @books.each do |book| %>
    <h1><%=book.name%></h1>
    <p>Category: <%=book.category%></p>
    <p>Price: $<%=book.price%></p>
    <p>ISBN: <%=book.isbn%></p>
  <%end%>
<%end%>
